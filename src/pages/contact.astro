---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Contact | Cybersecurity Portfolio">
  <!-- Hero Section -->
  <section class="min-h-[40vh] flex items-center justify-center mb-12">
    <div class="text-center space-y-6">
      <div class="text-left inline-block">
        <p class="text-green-400/70 text-sm mb-2">$ cat /etc/contact.conf</p>
        <h1 class="text-4xl md:text-6xl font-bold">
          <span class="text-cyan-400">Get In Touch</span>
        </h1>
        <p class="text-xl md:text-2xl text-green-400 mt-4">
          Let's <span class="text-cyan-400">Connect</span>
        </p>
      </div>

      <!-- Blinking Cursor Effect -->
      <div class="text-green-400/70 animate-pulse text-2xl">_</div>
    </div>
  </section>

  <!-- Contact Info Section -->
  <section class="max-w-4xl mx-auto mb-12">
    <div class="border border-cyan-500/30 bg-black/30 p-8 rounded-lg">
      <h2 class="text-2xl font-bold text-cyan-400 mb-6">
        <span class="text-green-400">&gt;</span> ./get_contact_info.sh
      </h2>
      
      <div class="space-y-6 text-green-400/90 leading-relaxed">
        <p class="border-l-2 border-cyan-500/50 pl-4">
          I'm always interested in discussing cybersecurity projects, collaboration opportunities, 
          or just connecting with fellow security enthusiasts. Feel free to reach out through any of the channels below!
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Methods Grid -->
  <section class="max-w-5xl mx-auto mb-12">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      
      <!-- Email -->
      <div class="border border-cyan-500/30 bg-black/30 p-6 rounded-lg hover:border-cyan-400 hover:shadow-lg hover:shadow-cyan-500/20 transition-all">
        <div class="flex items-start gap-4">
          <div class="text-3xl text-cyan-400">ðŸ“§</div>
          <div class="flex-1">
            <h3 class="text-xl font-bold text-cyan-400 mb-2">
              <span class="text-green-400">&gt;</span> Email
            </h3>
            <p class="text-green-400/80 text-sm mb-3">
              Best for formal inquiries and project discussions
            </p>
            <a 
              href="mailto:your.email@hva.nl" 
              class="text-cyan-400 hover:text-cyan-300 transition-colors break-all"
            >
              your.email@hva.nl
            </a>
          </div>
        </div>
      </div>

      <!-- GitHub -->
      <div class="border border-cyan-500/30 bg-black/30 p-6 rounded-lg hover:border-cyan-400 hover:shadow-lg hover:shadow-cyan-500/20 transition-all">
        <div class="flex items-start gap-4">
          <div class="text-3xl text-cyan-400">ðŸ’»</div>
          <div class="flex-1">
